---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
    {
      stats &&
        stats.map(({ amount, title, icon }) => (
          <div class="stats-card intersect-once motion-safe:opacity-0 motion-safe:intersect:animate-scale-in intersect-quarter">
            {icon && (
              <div class="icon-container-large mx-auto mb-6 bg-primary-500/20 border-primary-500/30">
                <Icon name={icon} class="w-8 h-8 text-primary-400" />
              </div>
            )}
            {amount && (
              <div class="font-heading gradient-text text-4xl font-bold lg:text-5xl xl:text-6xl mb-3">
                {amount}
              </div>
            )}
            {title && (
              <div class="text-sm font-semibold uppercase tracking-wider text-slate-300 lg:text-base">
                {title}
              </div>
            )}
          </div>
        ))
    }
  </div>
</WidgetWrapper>
