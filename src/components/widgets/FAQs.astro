---
import { Icon } from 'astro-icon/components';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Faqs as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  columns = 2,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="max-w-4xl mx-auto space-y-4">
    {items && items.map((item, index) => (
      <div class={`faq-item intersect-once intersect-quarter motion-safe:opacity-0 motion-safe:intersect:animate-slide-up`} style={`animation-delay: ${(index + 1) * 0.1}s`}>
        <div class="flex items-start space-x-4">
          <div class="icon-container flex-shrink-0 bg-primary-500/20 border-primary-500/30">
            <Icon name="tabler:help-circle" class="w-5 h-5 text-primary-400" />
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-white mb-3">{item.title}</h3>
            <p class="text-slate-300 leading-relaxed" set:html={item.description} />
          </div>
        </div>
      </div>
    ))}
  </div>
</WidgetWrapper>
