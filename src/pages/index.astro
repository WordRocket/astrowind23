---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Pricing from '~/components/widgets/Pricing.astro';

const metadata = {
  title: 'WordRocket - AI Content Generation Platform | Create SEO-Optimized Content',
  description: 'Generate high-quality, SEO-optimized content with AI. Access GPT-4, Claude, Gemini & more. Save time and boost your content marketing with WordRocket.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Start Creating Now',
        href: 'https://app.wordrocket.ai/register',
        target: '_blank',
        icon: 'tabler:rocket',
      },
      { text: 'Learn More', href: '#features' },
    ]}
    image={{ 
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', 
      alt: 'WordRocket AI Content Generation Dashboard' 
    }}
  >
    <Fragment slot="title">
      âœ¨ Your Ultimate <span class="text-accent dark:text-white">AI Content Sidekick</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">The Ultimate AI Writing Engine for Creators Who Want More</span><br/>
      Access the world's top AI models. Write better content. Scale your workflow. Plug in your own OpenRouter API to unlock GPT-4.1, Claude 3.7 Sonnet, Gemini 2.5 Pro & more.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline="Why Choose WordRocket"
    title="Powered by the World's Best AI"
    subtitle="Choose your engine: GPT-4, Claude, Gemini 2.5 Pro & more"
    items={[
      {
        title: 'Bring Your Own API',
        description: 'Connect your OpenRouter API key to access premium AI models like GPT-4, Claude 3.7 Sonnet, and Gemini 2.5 Pro.',
        icon: 'tabler:key',
      },
      {
        title: '8+ Pro Templates',
        description: 'From SEO blog posts to product roundups, deep-thinking articles to bulk content creation.',
        icon: 'tabler:template',
      },
      {
        title: 'Free SEO Generator',
        description: 'Create beautifully structured, keyword-rich content absolutely free using our built-in models.',
        icon: 'tabler:seo',
      },
      {
        title: 'Real-Time Web Search',
        description: 'Research and write articles with live web search capabilities for up-to-date content.',
        icon: 'tabler:world-search',
      },
      {
        title: 'Custom HTML Elements',
        description: 'Insert CTAs, affiliate links, styled headings, buttons, or widgets right inside your articles.',
        icon: 'tabler:code',
      },
      {
        title: 'Publish-Ready Content',
        description: 'Generate content with clean structure, SEO best practices, and perfect formatting.',
        icon: 'tabler:check',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="How It Works"
    title="Create amazing content in just four simple steps"
    items={[
      {
        title: '1. Choose a Template',
        description: 'Select from a variety of specialized content templates designed for different purposes.',
        icon: 'tabler:template',
      },
      {
        title: '2. Enter Your API Key',
        description: 'Add your OpenRouter API key to unlock access to the world\'s top AI models.',
        icon: 'tabler:key',
      },
      {
        title: '3. Enter Your Topic',
        description: 'Provide your topic, target keywords, and any specific requirements for your content.',
        icon: 'tabler:edit',
      },
      {
        title: '4. Generate Content',
        description: 'Our AI will analyze your inputs and generate high-quality, SEO-optimized content.',
        icon: 'tabler:sparkles',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2015&q=80',
      alt: 'WordRocket Content Creation Process',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Simple. Powerful. Effective.</h3>
      Get started in minutes and transform your content creation workflow forever.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->
  <Features2
    title="Content Templates"
    subtitle="Choose from a variety of specialized templates to create perfect content for any need"
    tagline="Templates"
    items={[
      {
        title: 'All In One SEO Generator',
        description: 'Complete SEO-optimized content with keywords, meta descriptions, and perfect structure.',
        icon: 'tabler:seo',
      },
      {
        title: 'Free SEO Blog Post Generator',
        description: 'Generate SEO-optimized content using free AI models with perfect formatting.',
        icon: 'tabler:article',
      },
      {
        title: 'Real-Time Web Search Article Generator',
        description: 'Research and write articles with live web search capabilities for up-to-date content.',
        icon: 'tabler:world-search',
      },
      {
        title: 'Deep Thinking Enabled Blog Generator',
        description: 'Create thoughtful, detailed content using AI models that explicitly show their thinking.',
        icon: 'tabler:brain',
      },
      {
        title: 'Product Round-up Generator',
        description: 'Create comprehensive product comparison articles with detailed analysis.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Low AI Humanized Blog Posts',
        description: 'Generate natural-sounding blog posts that don\'t feel AI-written using advanced techniques.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Bulk Blog Post Generator',
        description: 'Generate multiple SEO-optimized blog posts in the background with efficient processing.',
        icon: 'tabler:stack-2',
      },
      {
        title: 'Interactive Element Generator',
        description: 'Create custom, interactive HTML elements like calculators, FAQs, and timelines.',
        icon: 'tabler:components',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->
  <Stats
    title="Trusted by Content Creators Worldwide"
    stats={[
      { title: 'Content Pieces Generated', amount: '50K+' },
      { title: 'Active Users', amount: '2.5K+' },
      { title: 'Templates Available', amount: '12+' },
      { title: 'AI Models Supported', amount: '15+' },
    ]}
  />

  <!-- Pricing Widget ******************* -->
  <Pricing
    title="Simple Pricing"
    subtitle="Free during beta. Just bring your own API key."
    prices={[
      {
        title: 'Beta Access',
        subtitle: 'Full access to all features during our beta period',
        price: 'Free',
        period: '',
        items: [
          { description: 'Access to all templates' },
          { description: 'Unlimited text generation' },
          { description: 'All features included' },
          { description: 'Access to all new models' },
          { description: 'Future templates and upgrades' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get Started Now',
          href: 'https://app.wordrocket.ai/register',
        },
        hasRibbon: true,
        ribbonTitle: 'Beta',
      },
    ]}
  />

  <!-- Testimonials Widget *********** -->
  <Testimonials
    title="What Our Users Say"
    subtitle="Join thousands of satisfied users who are transforming their content creation with WordRocket"
    testimonials={[
      {
        testimonial: 'WordRocket has transformed our content creation process. We now produce high-quality, SEO-optimized blog posts in a fraction of the time it used to take us.',
        name: 'Sarah Johnson',
        job: 'Content Director, Growth Marketing Inc.',
        image: {
          src: 'https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=687&q=80',
          alt: 'Sarah Johnson Image',
        },
      },
      {
        testimonial: 'As a solo entrepreneur, I struggled with creating consistent content. WordRocket has been a game-changer, helping me maintain a regular publishing schedule with quality articles.',
        name: 'Michael Chen',
        job: 'Founder, TechStartup',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=687&q=80',
          alt: 'Michael Chen Image',
        },
      },
      {
        testimonial: 'The SEO optimization features are incredible. Our organic traffic has increased by 43% since we started using WordRocket for our content creation.',
        name: 'Emma Rodriguez',
        job: 'SEO Specialist, Digital Solutions',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Emma Rodriguez Image',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Try WordRocket Now',
        href: 'https://app.wordrocket.ai/register',
        target: '_blank',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Launch? ðŸš€
    </Fragment>

    <Fragment slot="subtitle">
      Start generating high-quality, SEO-ready content in minutes. Bring your own API, choose your favorite models, and take full control of your content workflow. No fluff. Just results.
    </Fragment>
  </CallToAction>
</Layout>